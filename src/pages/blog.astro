---
import Layout from '../layouts/Layout.astro';

// Sample blog posts data
const posts = [
  {
    id: 1,
    title: "Welcome to the Pink Kitty Revolution",
    excerpt: "We're launching something special. A new kind of music that blends AI creativity with raw human emotion. This is just the beginning...",
    date: "January 17, 2026",
    author: "furrykittenslit",
    category: "Announcements",
    readTime: "3 min read",
    image: "https://i.scdn.co/image/ab67616d0000b2737a9d030bdecfe2b167d526a5"
  },
  {
    id: 2,
    title: "Behind the Scenes: Creating 'C₄H₈O₃ (Scoop)'",
    excerpt: "Our debut single wasn't just written—it was engineered. Here's how we crafted the sound that's defining our genre...",
    date: "January 15, 2026",
    author: "Felty",
    category: "Production",
    readTime: "5 min read",
    image: "https://i.scdn.co/image/ab67616d0000b2737a9d030bdecfe2b167d526a5"
  },
  {
    id: 3,
    title: "The Story Behind 'Glittery Jizz Bubbles'",
    excerpt: "How do you name an album? For us, it was about capturing the essence of something beautiful, chaotic, and completely unexpected...",
    date: "January 12, 2026",
    author: "Bri",
    category: "Stories",
    readTime: "4 min read",
    image: "https://i.scdn.co/image/ab67616d0000b2737a9d030bdecfe2b167d526a5"
  },
  {
    id: 4,
    title: "AI + Music: The Future is Now",
    excerpt: "We're not replacing musicians—we're augmenting creativity. Learn how AI is transforming the way we think about music production...",
    date: "January 10, 2026",
    author: "furrykittenslit",
    category: "Technology",
    readTime: "6 min read",
    image: "https://i.scdn.co/image/ab67616d0000b2737a9d030bdecfe2b167d526a5"
  },
  {
    id: 5,
    title: "Minneapolis Girl: A Love Letter to the Midwest",
    excerpt: "Every song tells a story. This one is about distance, longing, and the cities that shape us. Here's the inspiration behind track 4...",
    date: "January 8, 2026",
    author: "Felty",
    category: "Stories",
    readTime: "4 min read",
    image: "https://i.scdn.co/image/ab67616d0000b2737a9d030bdecfe2b167d526a5"
  },
  {
    id: 6,
    title: "Our Favorite Recording Tools & Plugins",
    excerpt: "From AI vocal processors to vintage synth emulators, here's the tech stack that powers our sound...",
    date: "January 5, 2026",
    author: "Bri",
    category: "Production",
    readTime: "7 min read",
    image: "https://i.scdn.co/image/ab67616d0000b2737a9d030bdecfe2b167d526a5"
  }
];

const categories = ["All", "Announcements", "Production", "Stories", "Technology"];
---

<Layout title="furrykittenslit - Blog">
  <div class="min-h-screen bg-gradient-to-br from-pink-100 via-purple-50 to-pink-50">
    <div class="container mx-auto px-4 py-16">
      <h1 class="text-4xl md:text-6xl font-bold text-center mb-4 bg-gradient-to-r from-pink-500 to-purple-600 bg-clip-text text-transparent">
        Blog
      </h1>
      
      <p class="text-center text-gray-700 mb-12 text-lg">
        Behind the music, beyond the sound
      </p>

      <div class="max-w-6xl mx-auto">
        <!-- Category Filter -->
        <div class="flex flex-wrap justify-center gap-3 mb-12">
          {categories.map(category => (
            <button 
              class="category-btn px-6 py-2 rounded-full font-semibold transition-all duration-300 hover:shadow-lg"
              data-category={category}
            >
              {category}
            </button>
          ))}
        </div>

        <!-- Featured Post -->
        <div class="bg-white rounded-xl shadow-xl overflow-hidden mb-12 hover:shadow-2xl transition-shadow duration-300">
          <div class="md:flex">
            <div class="md:w-1/2">
              <img 
                src={posts[0].image} 
                alt={posts[0].title}
                class="w-full h-full object-cover"
              />
            </div>
            <div class="md:w-1/2 p-8">
              <div class="flex items-center gap-4 mb-4">
                <span class="bg-gradient-to-r from-pink-500 to-purple-600 text-white px-4 py-1 rounded-full text-sm font-semibold">
                  Featured
                </span>
                <span class="text-pink-600 font-semibold">{posts[0].category}</span>
              </div>
              <h2 class="text-3xl font-bold mb-4 bg-gradient-to-r from-pink-500 to-purple-600 bg-clip-text text-transparent">
                {posts[0].title}
              </h2>
              <p class="text-gray-700 text-lg mb-6">
                {posts[0].excerpt}
              </p>
              <div class="flex items-center justify-between text-sm text-gray-600">
                <div class="flex items-center gap-4">
                  <span>{posts[0].date}</span>
                  <span>•</span>
                  <span>{posts[0].readTime}</span>
                </div>
                <button class="text-pink-600 font-semibold hover:text-pink-700 transition-colors">
                  Read More →
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Blog Posts Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.slice(1).map(post => (
            <article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 cursor-pointer">
              <div class="relative">
                <img 
                  src={post.image} 
                  alt={post.title}
                  class="w-full h-48 object-cover"
                />
                <div class="absolute top-4 left-4">
                  <span class="bg-white/90 backdrop-blur-sm text-pink-600 px-3 py-1 rounded-full text-sm font-semibold">
                    {post.category}
                  </span>
                </div>
              </div>
              <div class="p-6">
                <h3 class="text-xl font-bold mb-3 text-gray-800 hover:text-pink-600 transition-colors">
                  {post.title}
                </h3>
                <p class="text-gray-600 mb-4 line-clamp-3">
                  {post.excerpt}
                </p>
                <div class="flex items-center justify-between text-sm text-gray-500">
                  <div class="flex flex-col">
                    <span class="font-semibold text-gray-700">{post.author}</span>
                    <span>{post.date}</span>
                  </div>
                  <span class="text-pink-600 font-semibold">{post.readTime}</span>
                </div>
              </div>
            </article>
          ))}
        </div>

        <!-- Newsletter Signup -->
        <div class="mt-16 bg-gradient-to-r from-pink-500 to-purple-600 rounded-xl p-8 md:p-12 text-white text-center">
          <h2 class="text-3xl font-bold mb-4">
            Stay in the Loop
          </h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Get the latest updates, behind-the-scenes content, and exclusive releases delivered straight to your inbox.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 max-w-xl mx-auto">
            <input 
              type="email" 
              placeholder="Enter your email"
              class="flex-1 px-6 py-3 rounded-full text-gray-800 focus:outline-none focus:ring-4 focus:ring-white/50"
            />
            <button class="bg-white text-pink-600 font-bold px-8 py-3 rounded-full hover:bg-pink-50 transition-colors">
              Subscribe
            </button>
          </div>
        </div>

        <!-- Pagination -->
        <div class="mt-12 flex justify-center items-center gap-2">
          <button class="px-4 py-2 rounded-lg border-2 border-pink-300 text-pink-600 font-semibold hover:bg-pink-50 transition-colors">
            ← Previous
          </button>
          <button class="px-4 py-2 rounded-lg bg-gradient-to-r from-pink-500 to-purple-600 text-white font-semibold">
            1
          </button>
          <button class="px-4 py-2 rounded-lg border-2 border-pink-300 text-pink-600 font-semibold hover:bg-pink-50 transition-colors">
            2
          </button>
          <button class="px-4 py-2 rounded-lg border-2 border-pink-300 text-pink-600 font-semibold hover:bg-pink-50 transition-colors">
            3
          </button>
          <button class="px-4 py-2 rounded-lg border-2 border-pink-300 text-pink-600 font-semibold hover:bg-pink-50 transition-colors">
            Next →
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .category-btn {
    background: white;
    color: #ec4899;
    border: 2px solid #fbcfe8;
  }

  .category-btn:hover,
  .category-btn.active {
    background: linear-gradient(135deg, #ec4899, #8b5cf6);
    color: white;
    border-color: transparent;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  // Category filter functionality
  const categoryButtons = document.querySelectorAll('.category-btn');
  
  categoryButtons.forEach(button => {
    button.addEventListener('click', () => {
      // Remove active class from all buttons
      categoryButtons.forEach(btn => btn.classList.remove('active'));
      
      // Add active class to clicked button
      button.classList.add('active');
      
      // Get selected category
      const category = button.dataset.category;
      
      // Filter logic would go here
      console.log(`Filtering by: ${category}`);
      
      // In a real implementation, you'd filter the posts based on category
    });
  });

  // Set "All" as active by default
  categoryButtons[0]?.classList.add('active');

  // Make blog post cards clickable
  const blogCards = document.querySelectorAll('article');
  blogCards.forEach(card => {
    card.addEventListener('click', () => {
      // In a real implementation, this would navigate to the full blog post
      console.log('Opening blog post...');
    });
  });
</script>
