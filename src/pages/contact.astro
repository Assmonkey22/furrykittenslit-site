---
import Layout from '../layouts/Layout.astro';
---

<Layout title="furrykittenslit - Contact">
  <div class="min-h-screen bg-gradient-to-br from-pink-100 via-purple-50 to-pink-50">
    <div class="container mx-auto px-4 py-16">
      <h1 class="text-4xl md:text-6xl font-bold text-center mb-4 bg-gradient-to-r from-pink-500 to-purple-600 bg-clip-text text-transparent">
        Contact
      </h1>
      
      <p class="text-center text-gray-700 mb-12 text-lg">
        Get in touch with us!
      </p>

      <div class="max-w-2xl mx-auto">
        <!-- Contact Cards -->
        <div class="grid gap-6 mb-8">
          <!-- Felty Contact Card -->
          <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-shadow duration-300">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-16 h-16 bg-gradient-to-br from-pink-400 to-pink-600 rounded-full flex items-center justify-center text-white text-2xl font-bold">
                F
              </div>
              <div>
                <h2 class="text-2xl font-bold bg-gradient-to-r from-pink-500 to-purple-600 bg-clip-text text-transparent">
                  Felty
                </h2>
                <p class="text-gray-600">Management & Bookings</p>
              </div>
            </div>
            <a 
              href="mailto:felty@furrykittenslit.com" 
              class="inline-flex items-center gap-2 text-pink-600 hover:text-pink-700 font-semibold text-lg transition-colors"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="2" y="4" width="20" height="16" rx="2"></rect>
                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
              </svg>
              felty@furrykittenslit.com
            </a>
          </div>

          <!-- Bri Contact Card -->
          <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-shadow duration-300">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-16 h-16 bg-gradient-to-br from-purple-400 to-purple-600 rounded-full flex items-center justify-center text-white text-2xl font-bold">
                B
              </div>
              <div>
                <h2 class="text-2xl font-bold bg-gradient-to-r from-pink-500 to-purple-600 bg-clip-text text-transparent">
                  Bri
                </h2>
                <p class="text-gray-600">Press & Media Inquiries</p>
              </div>
            </div>
            <a 
              href="mailto:bri@furrykittenslit.com" 
              class="inline-flex items-center gap-2 text-purple-600 hover:text-purple-700 font-semibold text-lg transition-colors"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="2" y="4" width="20" height="16" rx="2"></rect>
                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
              </svg>
              bri@furrykittenslit.com
            </a>
          </div>
        </div>

        <!-- Additional Info Section -->
        <div class="bg-gradient-to-br from-pink-50 to-purple-50 rounded-xl p-8 border-2 border-pink-200">
          <h3 class="text-xl font-bold text-gray-800 mb-4">
            Looking to collaborate?
          </h3>
          <p class="text-gray-700 mb-4">
            We're always excited to hear from fans, fellow artists, and industry professionals. 
            Whether you're interested in bookings, collaborations, or just want to say hi, 
            drop us a line at either of the emails above!
          </p>
          <p class="text-gray-600 text-sm">
            We typically respond within 24-48 hours.
          </p>
        </div>

        <!-- Social Media Section (Optional) -->
        <div class="mt-8 text-center">
          <p class="text-gray-600 mb-4">Follow us on social media</p>
          <div class="flex justify-center gap-6">
            <a href="#" class="text-pink-500 hover:text-pink-600 transition-colors">
