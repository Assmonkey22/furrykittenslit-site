---
// Layout.astro - Main layout with header and footer
const { title = "furrykittenslit - AI-Powered Pink Kitty Rock" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@400;600;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style is:global>
        * {
            font-family: 'League Spartan', sans-serif;
        }
    </style>
</head>
<body class="bg-gradient-to-b from-pink-100 to-white min-h-screen">
    <!-- Header -->
    <header class="bg-gradient-to-r from-pink-600 to-purple-700 text-white p-6 sticky top-0 z-10 shadow-md">
        <div class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center gap-4">
            <div class="flex items-center gap-4">
                <img src="/images/fks_logo.png" alt="FKS Logo" class="w-20 h-20 rounded-full border-2 border-white">
                <h1 class="text-4xl font-black">furrykittenslit</h1>
            </div>
            <nav>
                <ul class="flex gap-6 md:gap-8 list-none">
                    <li><a href="/" class="hover:text-pink-300 transition">Home</a></li>
                    <li><a href="/about" class="hover:text-pink-300 transition">About</a></li>
                    <li><a href="/music" class="hover:text-pink-300 transition">Music</a></li>
                    <li><a href="/blog" class="hover:text-pink-300 transition">Blog</a></li>
                    <li><a href="/contact" class="hover:text-pink-300 transition">Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main>
        <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gradient-to-r from-pink-800 to-purple-900 text-white py-6 mt-16">
        <div class="max-w-6xl mx-auto text-center">
            <div class="flex justify-center gap-6 mb-4">
                <a href="https://x.com/furrykittenslit" target="_blank" aria-label="X/Twitter" class="hover:text-pink-300 transition">
                    <i class="fab fa-x-twitter text-2xl"></i>
                </a>
                <a href="https://open.spotify.com/artist/YOUR_ID" target="_blank" aria-label="Spotify" class="hover:text-pink-300 transition">
                    <i class="fab fa-spotify text-2xl"></i>
                </a>
                <a href="https://www.youtube.com/channel/UCkfXx0ZjJ60h6ZzG-JyBVWg" target="_blank" aria-label="YouTube" class="hover:text-pink-300 transition">
                    <i class="fab fa-youtube text-2xl"></i>
                </a>
                <a href="https://www.facebook.com/furrykittenslit" target="_blank" aria-label="Facebook" class="hover:text-pink-300 transition">
                    <i class="fab fa-facebook text-2xl"></i>
                </a>
            </div>
            <p>&copy; 2026 furrykittenslit LLC.</p>
        </div>
    </footer>
</body>
</html>
